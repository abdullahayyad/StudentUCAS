<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_secreen"

    tools:context="ps.edu.ucas.studentportal.frag.user.LoginStudent"
    >

    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="-60dp"
        android:paddingTop="60dp"
        android:layout_below="@+id/imageView"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center"
        android:paddingBottom="30dp"
        >

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:layout_width="match_parent"
            android:layout_height="340dp"
            layout="@layout/leadboard_navigation_layout"
            />


    </LinearLayout>
</ScrollView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignTop="@+id/layout_login"
        android:background="@drawable/shape_toolbar_dropshadow" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="105dp"
        android:background="@drawable/shape_circle_dropshadow"

        android:layout_centerHorizontal="true"


        android:src="@null" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_login_circle"

        android:layout_centerHorizontal="true"


        android:src="@drawable/logo" />



</RelativeLayout>
