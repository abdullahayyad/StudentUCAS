<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/student_profile"
            android:padding="@dimen/activity_horizontal_margin">


            <LinearLayout
                android:id="@+id/contanor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الإسم :"
                android:id="@+id/name_lbl"
                android:textStyle="bold"
                android:textSize="14sp"

            android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ttt"
                android:id="@+id/student_name"
                android:layout_alignParentTop="true"
                android:textSize="14sp"
                android:layout_toLeftOf="@id/name_lbl"
                android:layout_alignBaseline="@+id/name_lbl"
                android:maxLines="2"
                android:layout_marginBottom="16dp"
                />

                </RelativeLayout>

        <RelativeLayout
                 android:visibility="gone"
                 android:id="@+id/student_detail_layout"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

      <TextView

                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="بيانات أكاديمية"

                android:textStyle="bold"

                android:layout_alignParentRight="true"
                android:id="@+id/profile_college_lbl"
               />


                <View
                    android:id="@+id/separateOne"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#9aaa"
                    android:layout_below="@+id/profile_college_lbl"

                    android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

                <TextView
                    android:id="@+id/department_lbl"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="القسم :"
                    android:textStyle="bold"
                    android:layout_below="@+id/separateOne"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    />




                <TextView

                    android:id="@+id/student_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="tttt"
                    android:layout_below="@+id/separateOne"

                    android:layout_toLeftOf="@+id/department_lbl"

                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"

                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    />


                <TextView
                    android:id="@+id/major_lbl"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="التخصص :"
                    android:textStyle="bold"
                    android:layout_below="@+id/department_lbl"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    />




                <TextView

                    android:id="@+id/student_major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="tttt"
                    android:layout_below="@+id/department_lbl"

                    android:layout_toLeftOf="@id/major_lbl"

                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"

                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    />



<!--
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="المستوى :"
                android:id="@+id/level_lbl"
                android:textStyle="bold"
                android:textSize="14sp"

                android:layout_below="@+id/major_lbl"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"

                />


                <TextView

                    android:id="@+id/student_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="tttt"
                    android:layout_below="@+id/major_lbl"

                    android:layout_toLeftOf="@id/level_lbl"

                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"

                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    />

-->
                <View
                    android:id="@+id/separateTwo"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#9aaa"
                    android:layout_below="@+id/student_major"
                    android:layout_marginBottom="5dp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ساعات دراسة :"
                    android:id="@+id/studyHour"
                    android:textStyle="bold"
                    android:textSize="14sp"

                    android:layout_below="@+id/separateTwo"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"

                    />


                <TextView

                    android:id="@+id/student_studyHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="tttt"
                    android:layout_below="@+id/separateTwo"

                    android:layout_toLeftOf="@id/studyHour"

                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"

                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ساعات النجاح :"
                    android:id="@+id/lbl_successHour"
                    android:layout_below="@+id/separateTwo"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/student_successHour"
                    android:layout_marginLeft="5dp"
                    android:maxLines="2"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:id="@+id/student_successHour"
                    android:layout_below="@+id/separateTwo"
                    android:textSize="14sp"


                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:layout_marginBottom="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ساعات متبقية :"
                    android:id="@+id/lbl_romaiHour"
                    android:textStyle="bold"
                    android:textSize="14sp"

                    android:layout_below="@+id/studyHour"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"

                    />


                <TextView

                    android:id="@+id/student_romaiHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="tttt"
                    android:layout_below="@+id/studyHour"

                    android:layout_toLeftOf="@id/lbl_romaiHour"

                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"

                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    />


                <View
                    android:id="@+id/separateThree"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#9aaa"
                    android:layout_below="@+id/student_romaiHour"
                    android:layout_marginBottom="5dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="معدل تراكمي :"
                    android:id="@+id/lbl_avg"
                    android:textStyle="bold"
                    android:textSize="14sp"

                    android:layout_below="@+id/separateThree"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"

                    />


                <TextView

                    android:id="@+id/student_std_avg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="50.00%"
                    android:layout_below="@+id/separateThree"

                    android:layout_toLeftOf="@id/studyHour"

                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"

                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="معدل تراكمي كخريج :"
                android:id="@+id/lbl_avg_grad"
                android:layout_below="@+id/lbl_avg"
                android:textSize="14sp"
                android:textStyle="bold"

                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:maxLines="2"
                android:paddingBottom="5dp"


                />


                <TextView

                    android:id="@+id/student_avg_grad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="50.00%"
                    android:layout_below="@+id/lbl_avg"

                    android:layout_toLeftOf="@id/lbl_avg_grad"

                    android:layout_marginLeft="5dp"
                    android:textSize="14sp"


                    />

</RelativeLayout>
                <ImageButton
                    android:id="@+id/show_description_btn"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="v"
                    android:src="@drawable/ic_more"
                    android:background="@null"/>

            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>