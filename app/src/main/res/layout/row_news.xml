<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ps.edu.ucas.portal.view.MyLinearLayout
            android:id="@+id/myLinear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/Material.Drawable.Ripple.Wave.Light"
            android:focusable="false"
            android:padding="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >


        <ImageView
            android:id="@+id/image_news"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true">



        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/news_title"
            android:layout_toLeftOf="@+id/image_news"
            android:layout_marginRight="8dp"
            android:textStyle="bold"
            android:layout_alignTop="@+id/image_news"
            android:text="الكلية الجامعية للعلوم التطبيقية بخانيونس تفتتح مركز الإرشاد الزراعي والتدريب ومختبرات الزراعة"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/news_detail"
            android:layout_toLeftOf="@+id/image_news"
            android:layout_marginRight="8dp"

            android:layout_below="@+id/news_title"
            android:visibility="gone"
            android:text="وصف وصف وصف"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/news_date"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="8dp"
            android:layout_alignBottom="@+id/image_news"


            android:text="21/3/1992"
            android:ellipsize="end"
            android:maxLines="1" />





    </RelativeLayout>

            </ps.edu.ucas.portal.view.MyLinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
